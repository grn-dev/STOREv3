@model MainPage
@{
    ViewData["Title"] = "Index";
}
<section class="trending_items">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section_tittle text-center">
                    <h2> محصولات </h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model._Partial2)
            {
                <div class="col-lg-4 col-sm-6">
                    <div class="single_product_item">

                        <a asp-action="showSingle" asp-controller="Product" asp-route-ProductID="item.ProductID">
                            <img src=@item.mainImages id=@item.ProductID alt="#" class="img-fluid">
                        </a>
                        <h3> <a>@item.Name</a> </h3> 
                    </div>
                </div>
            }

        </div>
    </div>
</section>
 