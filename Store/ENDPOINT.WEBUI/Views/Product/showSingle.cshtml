                        </div>
                        <div class="add_to_cart">
                            <a href="#" class="btn_3">09121112233 شماره تماس </a>
                        
                        </div>

                        <br>
                        <br>
                        <br>
                        <br>
                        <br>
                        <div>

                            @foreach (var item in Model.Tags)
                            {
                <h4> <span class="badge badge-pill badge-dark"> @item</span></h4>
                
                }


                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--================End Single Product Area =================-->



