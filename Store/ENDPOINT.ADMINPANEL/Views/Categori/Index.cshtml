@model CategoriViewModel
@{

}


<form asp-action="Index" asp-controller="Categori" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="form-group">

        <div class="form-group">
            <label>دسته بندی</label>
            <select class="form-control" name="ParentId"
                    asp-items="@(new SelectList(Model.categories,"ID","Categori"))">
                <option value="0">اصلی</option>

            </select>
        </div>

        <div class="form-group">
            <label> دسته بندی جدید</label>
            <input type="text" asp-for="newCategoriName" class="form-control" maxlength="70" />
        </div>

        <input type="submit" class="btn btn-success" style="align-items:center" value="ثبت" />

    </div>
</form>

@if (ViewBag.Error != null)
{
    <h3 style="color:red">@ViewBag.Error</h3>
}

