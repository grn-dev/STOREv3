@model List<Core.Domian.Product>
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>نام</th>
        <th>قیمت</th>
        <th>توضیحات</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductID</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Description</td>
        </tr>
    }
</table>
