@model AddProductViewModel
@{

}

<form asp-action="Add" asp-controller="Product" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="form-group">

        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" maxlength="50" />
        <span asp-validation-for="Name"></span>

    </div>
    @*<div class="form-group">
            <label asp-for="Price"></label>
            <input type="number" asp-for="Price" class="form-control" />
            <span asp-validation-for="Price"></span>
        </div>*@

    <div class="form-group">
        <label asp-for="MainImages"></label>
        <input type="file" asp-for="MainImages" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="Images"></label>
        <input type="file" asp-for="Images" class="form-control" multiple />
    </div>

    <asp:FileUpload ID="FileUploadControl" runat="server" AllowMultiple="true" />

    <div class="form-group">

        <label asp-for="Description"></label>
        <textarea asp-for="Description" cols="40" class="form-control" rows="5"></textarea>

        <span asp-validation-for="Description"></span>

    </div>
    <div class="form-group">
        <select class="form-control select2" name="CategoryId" multiple>
            @foreach (var item in Model.CategoryForDisplay)
            {
                <option value="@item.CategoryId">@item.CategoryName</option>
            }

        </select>
    </div>
    <input type="submit" class="btn btn-primary" value="ثبت" />
</form>


