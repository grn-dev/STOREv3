@model List<ENDPOINT.ADMINPANEL.Models.LogDetailsViewModel>
@{ ViewData["Title"] = "Index"; }


<form>
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <button asp-action="btnResetLog"  asp-controller="Review"
                        class="btn btn-danger col-md-6">
                    RESET
                </button>
            </div>
        </div>
    </div>
</form>
<br>
<br>
<table class="table table-hover">
    <tr>
        <th>نام</th>
        <th>تاریخ</th>
        <th>IP</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.productName</td>
            <td>@item.VisitDate</td>
            <td>@item.IP</td>

        </tr>
    }

</table>

